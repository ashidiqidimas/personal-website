---
import "../css/base.css";
import Layout from "../layouts/Layout.astro";
import { Picture } from "@astrojs/image/components";
import MainCard from "../components/shared/MainCard.astro";
import PrimaryLinkButton from "../components/shared/PrimaryLinkButton.astro";
import SecondaryLinkButton from "../components/shared/SecondaryLinkButton.astro";
import SocialMediaLinks from "../components/shared/SocialMediaLinks.astro";
---

<Layout>
    <main
        class="h-[calc(100vh)] sm:h-[calc(100vh)] pt-[56px] flex w-full flex-col items-center"
    >
        <div class="flex w-full basis-full">
            <div
            class="mx-2 sm:mx-4 h-full flex-col items-center justify-end hidden sm:flex"
        >
            <div class="bg-primary-500 h-[80px] w-[1.5px] rounded-full"></div>
            <div class="mt-4 flex flex-col gap-4">
                <SocialMediaLinks />
            </div>
            <div class="mt-4 bg-primary-500 h-[140px] w-[1.5px] rounded-full">
            </div>
        </div>
        <div
            class="flex basis-full sm:basis-1/2 items-center justify-center px-4 sm:px-8"
        >
            <div>
                <p class="ml-[-2px] da-text-h2 font-medium text-tsecondary">
                    Hello, I'm
                </p>
                <h1 class="ml-[-6px] mt-2 da-text-large-title text-primary-500">
                    Dimas Ashidiqi
                </h1>
                <p class="mt-8 text-tsecondary da-text-body1">
                    I'm an <span class="font-semibold text-tPrimary"
                        >iOS developer</span
                    > who believes every user deserves<br class="hidden xl:inline" /> great user experiece and high-performing
                    apps.
                </p>
                <p class="mt-4 text-tsecondary text-xl">
                    Based on <span class="font-semibold text-tPrimary"
                        >Jakarta, Indonesia ðŸ‡®ðŸ‡©</span
                    >
                </p>
                <div class="mt-8 flex gap-4 w-full">
                    <PrimaryLinkButton
                        href="/contact"
                        className="basis-1/2 sm:basis-[180px]"
                    >
                        Contact
                    </PrimaryLinkButton>
                    <SecondaryLinkButton
                        href="https://pub-b01531a0b7c646a4ac161b07b0950d81.r2.dev/Dimas-Prabowo-Ashidiqi-Resume.pdf"
                        className="basis-1/2 sm:basis-[180px]"
                        download
                        >Resume
                    </SecondaryLinkButton>
                </div>
            </div>
        </div>
        <div
            class="bg-slate-50 h-[700px] w-[400px] rounded-b-full z-20 absolute lg:-right-16 xl:right-0 -top-20 rotate-[40deg] hidden lg:block"
        >
            <div
                class="h-[700px] w-[400px] bg-primary-500 rounded-b-full z-20 absolute overflow-hidden"
            >
                <div class="overflow-hidden">
                    <Picture
                        src="https://pub-b01531a0b7c646a4ac161b07b0950d81.r2.dev/dimas-image.webp"
                        class="rotate-[-40deg] absolute bottom-0 right-16"
                        widths={[300]}
                        aspectRatio="300:360"
                        sizes="300px"
                        alt="Photo of Dimas"
                    />
                    <div
                        class="h-[700px] w-[400px] bg-primary-500 rounded-b-full z-20 absolute opacity-[.24]"
                    >
                    </div>
                </div>
            </div>
            <MainCard
                className="z-20 absolute -bottom-10 right-0 -rotate-[40deg]"
            >
                <p class="font-medium text-center text-tsecondary">
                    iOS Developer Intern @ Apple<br /> Developer Academy Cohort 2023
                </p>
            </MainCard>
        </div>
        </div>
        <div
            class="absolute right-0 bottom-10 items-center gap-4 hidden sm:flex"
        >
            <p class="text-tTertiary text-lg">dimas@ashidiqi.com</p>
            <div class="w-[170px] h-[1.5px] bg-primary-500"></div>
        </div>
    </main>
</Layout>
